{
  "name": "pipfy",
  "displayName": "PiPfy",
  "version": "0.0.1",
  "description": "A browser extension that opens videos in Picture-in-Picture mode.",
  "author": "Alexandre Anicio",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@webcomponents/custom-elements": "^1.6.0",
    "lit": "^3.2.0",
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "^6.1.13"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/styled-components": "^5.1.34",
    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "storage",
      "windows",
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "background.ts",
      "type": "module"
    }
  }
}
